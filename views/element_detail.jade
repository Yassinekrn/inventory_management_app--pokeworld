extends layout

block content
    h1 #{element.name}

    hr

    h2 Pokemons with this element:
    if pokemon_list.length > 0
        ul
            each pokemon in pokemon_list
                li
                    a(href=pokemon.url) #{pokemon.name}
                li
                    img(src=`data:${pokemon.avatar.contentType};base64,${pokemon.avatar.data.toString('base64')}`, alt=`${pokemon.name} image`)
                li
                    p #{pokemon.description}
    else
        li There are no pokemons.

    
    a(href="http://localhost:3000/pokeworld/elements") Back to elements list
    br
    a(href="http://localhost:3000/pokeworld/element/#{element._id}/delete/") Delete this element
    br
    a(href="http://localhost:3000/pokeworld/element/#{element._id}/update/") Update this element