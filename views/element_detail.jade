extends layout

block content
    h1 #{element.name}

    br
    hr
    br

    h2 Pokemons with this element:
    if pokemon_list.length > 0
        ul
            each pokemon in pokemon_list
                li
                    a(href=pokemon.url) #{pokemon.name}
                li
                    img(src=`data:${pokemon.avatar.contentType};base64,${pokemon.avatar.data.toString('base64')}`, alt=`${pokemon.name} image`)
                li
                    p #{pokemon.description}
                li
                    each element in pokemon.element
                        p #{element.name}
    else
        li There are no pokemons.
